#installation

sudo apt -y install ansible

#shows all nodes that are in machine
ansible --list-hosts all

#inventory file stores all node info
cat /etc/ansible/hosts

sudo vi /etc/ansible/hosts
#10.0.0.0
#10.0.0.1

sudo vi /etc/ansible/hosts
#[g1]
#10.0.0.0
#10.0.0.1

ansible --list-hosts all g1 #displays as shown below
10.0.0.0
10.0.0.1

#communicate with all the nodes and groups 
ansible all -m ping

#to create host with ssh
n1 ansible_host=40.81.26.213 ansible_user=ubuntu ansible_ssh_private_key_file=/home/azureuser/lms-key.pem

#to send pem key from local lap to our server
scp -i lms-key.pem lms-key.pem azureuser@40.81.26.213:~

#to create a file
ansible n1 -m file -a "path=/home/azureuser/<dir-name> state=directory"

#using command module you can run the commands
ansible n1 -m command -a "ls"

#to give sudo previleges should add -b at end[b stands for become
-b

